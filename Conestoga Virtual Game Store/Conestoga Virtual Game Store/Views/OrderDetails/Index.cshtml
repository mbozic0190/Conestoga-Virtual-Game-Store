@model IEnumerable<Conestoga_Virtual_Game_Store.Models.order_details>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.game_platforms.game_platform_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.order.order_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.physical_copy)
        </th>
