        <td>
            @Html.DisplayFor(modelItem => item.game_platforms.game_platform_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.order.order_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.physical_copy)
        </td>
